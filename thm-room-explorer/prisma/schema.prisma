generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ScrapeStatus {
  PENDING
  OK
  FAILED
}

enum RelevanceGeneratedBy {
  scraper
  admin
  auto
}

enum TagType {
  Domain
  Tactic
  Technique
  Tool
  Artifact
  Platform
}

model Room {
  id            String       @id @default(uuid()) @db.Uuid
  slug          String       @unique
  name          String?
  url           String?
  category      String?
  description   String?      @db.Text
  timeText      String?
  difficulty    String?
  tagsText      String[]     @default([])
  toolsText     String[]     @default([])
  lessonsText   String[]     @default([])
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  lastScrapedAt DateTime?
  scrapeStatus  ScrapeStatus @default(PENDING)
  scrapeError   String?      @db.Text
  rawSourceHash String?

  roomTags            RoomTag[]
  relevanceAssessments RelevanceAssessment[]
  scrapeJobs          ScrapeJob[]
}

model Tag {
  id              String   @id @default(uuid()) @db.Uuid
  nameCanonical   String   @unique
  displayName     String
  type            TagType
  primaryCluster  String?
  secondaryCluster String?
  confidence      Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  roomTags RoomTag[]
}

model RoomTag {
  roomId       String @db.Uuid
  tagId        String @db.Uuid
  originalText String
  createdAt    DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([roomId, tagId])
  @@index([tagId])
}

model RelevanceAssessment {
  id            String              @id @default(uuid()) @db.Uuid
  roomId        String              @db.Uuid
  rubricKey     String
  score         Int?
  justification String?             @db.Text
  generatedBy   RelevanceGeneratedBy @default(auto)
  updatedAt     DateTime            @updatedAt

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([roomId, rubricKey])
  @@index([rubricKey])
}

model ScrapeRun {
  id         String   @id @default(uuid()) @db.Uuid
  mode       String
  startedAt  DateTime @default(now())
  finishedAt DateTime?
  status     String   @default("RUNNING")
  stats      Json     @default("{}")
  logs       Json     @default("[]")
}

model ScrapeJob {
  id         String   @id @default(uuid()) @db.Uuid
  runId      String?  @db.Uuid
  roomId     String   @db.Uuid
  status     String   @default("QUEUED")
  attempts   Int      @default(0)
  lastError  String?  @db.Text
  queuedAt   DateTime @default(now())
  startedAt  DateTime?
  finishedAt DateTime?

  run  ScrapeRun? @relation(fields: [runId], references: [id], onDelete: SetNull)
  room Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@index([roomId])
  @@index([status])
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  passwordHash String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
